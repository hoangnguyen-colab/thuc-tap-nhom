@model IEnumerable<cong_nghe_web.Models.CartItemModel>
@{
    ViewBag.Title = "Cart";
}

<div class="breadcrumb-area pt-255 pb-170" style="background-image: url(/Assets/img/banner/banner-4.jpg)">
    <div class="container-fluid">
        <div class="breadcrumb-content text-center">
            <h2>Cart page</h2>
            <ul>
                <li>
                    <a href="@Url.Action("Index", "Home")">home</a>
                </li>
                <li>Cart</li>
            </ul>
        </div>
    </div>
</div>

<div class="product-cart-area pt-120 pb-130">
    <div class="container">
        @if (Model.Count() != 0)
        {
            decimal total = 0, subtotal = 0;
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-name text-center">products</th>
                                    <th class="product-price text-center">products name</th>
                                    <th class="product-name text-center">price</th>
                                    <th class="product-price text-center">quantity</th>
                                    <th class="product-quantity text-center">total</th>
                                    <th class="product-subtotal text-center">delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    subtotal = 0;
                                    <tr>
                                        <td class="product-thumbnail text-center">
                                            <a href="@Url.Action("Detail", "Shop", new { id = item.ProductID, url = item.ProductURL })">
                                                <img src="@item.product.ProductImage" alt="" style="width: 120px;
">
                                            </a>
                                        </td>
                                        <td class="product-name text-center">
                                            <a href="@Url.Action("Detail", "Shop", new { id = item.ProductID, url = item.ProductURL })">
                                                @item.product.ProductName
                                            </a>
                                        </td>
                                        <td class="product-price text-center">
                                            @if (item.product.PromotionPrice.HasValue)
                                            {
                                                <span class="amount">
                                                    @item.product.PromotionPrice.Value.ToString("#,##0")₫
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="amount">
                                                    @item.product.ProductPrice.ToString("#,##0")₫
                                                </span>
                                            }
                                        </td>
                                        <td class="product-quantity text-center">
                                            <span class="amount">
                                                @item.quantity
                                            </span>
                                        </td>
                                        @if (item.product.PromotionPrice.HasValue)
                                        {
                                            subtotal = item.product.PromotionPrice.Value * item.quantity;
                                            total += subtotal;
                                            <td class="product-subtotal text-center">
                                                @subtotal.ToString("#,##0")₫
                                            </td>
                                        }
                                        else
                                        {
                                            subtotal = item.product.ProductPrice * item.quantity;
                                            total += subtotal;
                                            <td class="product-subtotal text-center">
                                                @subtotal.ToString("#,##0")₫
                                            </td>

                                        }
                                        <td class="product-cart-icon product-subtotal text-center">
                                            <a href="@Url.Action("Delete", "Cart", new { id = item.product.ProductID })">
                                                <i class="ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="cart-shiping-update">
                        <div class="cart-shipping">
                            <a class="btn-style cr-btn" href="@Url.Action("Shop", "Shop")">
                                <span>continue shopping</span>
                            </a>
                        </div>
                        <div class="update-checkout-cart">
                            <div class="update-cart">
                                <a class="btn-style cr-btn" href="@Url.Action("Checkout", "Cart")">
                                    <span>checkout</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-7 col-sm-6">
                    <div class="discount-code">
                        <h4>enter your discount code</h4>
                        <div class="coupon">
                            <input type="text">
                            <input class="cart-submit" type="submit" value="enter">
                        </div>
                    </div>
                </div>
                <div class="col-md-5 col-sm-6">
                    <div class="shop-total">
                        <h3>cart total</h3>
                        <ul>
                            <li>
                                sub total
                                <span>@total.ToString("#,##0")₫</span>
                            </li>
                            <li class="order-total">
                                shipping
                                <span>0</span>
                            </li>
                            <li>
                                order total
                                <span>@total.ToString("#,##0")₫</span>
                            </li>
                        </ul>
                    </div>
                    <div class="cart-btn text-center mb-15">
                        <a href="@Url.Action("Checkout", "Cart")">payment</a>
                    </div>
                    <div class="continue-shopping-btn text-center">
                        <a href="@Url.Action("Shop", "Shop")">continue shopping</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h1 class="text-center">
                Cart Empty
            </h1>
            <div class="row">
                <div class="col-md-12">
                    <div class="cart-shiping-update">
                        <div class="cart-shipping">
                            <a class="btn-style cr-btn" href="@Url.Action("Shop", "Shop")">
                                <span>start shopping</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>